<div class="container mt-3 portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag(portfolio_img(@portfolio_item.main_image.url, 'main'), width: '100%') %>
    </div>
    <div class="col-md-5">
      <h1> <%= @portfolio_item.title %> </h1>
      <hr>
      <em> <%= @portfolio_item.subtitle %> </em>
      <p> <%= @portfolio_item.body %> </p>
      <hr>
      <h3> Technologies used: </h3>
      <% @portfolio_item.technologies.each do |technology| %>
        <p> <%= technology.name %> </p>
      <% end %>

      <%= render partial: 'shared/admin_action_icons', locals: { object: @portfolio_item, edit_path: edit_portfolio_path(@portfolio_item) } %>
    </div>

  </div>
</div>
